<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_menu"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="prova.com.br.prova.MenuActivity">

    <TextView
        android:id="@+id/novoBaile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:text="Novo Baile"
        android:drawableTop="@drawable/show"
        android:layout_marginTop="80dp"
        android:layout_marginLeft="10dp"
        android:gravity="center"
        android:onClick="novoBaileOnClick"

        />
    <TextView
        android:id="@+id/novaBanda"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:text="Cadastrar Banda"
        android:drawableTop="@drawable/band"
        android:layout_alignParentRight="true"
        android:layout_marginRight="10dp"
        android:layout_alignTop="@id/novoBaile"
        android:gravity="center"
        android:onClick="novaBandaOnClick"/>

    <TextView
        android:id="@+id/meusEventos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:text="Meus eventos"
        android:drawableTop="@drawable/bailes"
        android:layout_below="@id/novoBaile"
        android:layout_marginTop="80dp"
        android:layout_alignLeft="@id/novoBaile"
        android:gravity="center"
        android:onClick="meusEventosOnClick" />

    <TextView
        android:id="@+id/configuracoes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:text="ALTERAR CORES - SEEKBAR"
        android:drawableTop="@drawable/config"
        android:layout_below="@id/novaBanda"
        android:layout_marginTop="80dp"
        android:layout_alignRight="@id/novaBanda"
        android:gravity="center"
        android:onClick="onClickAlterarCores"
        />

</RelativeLayout>
