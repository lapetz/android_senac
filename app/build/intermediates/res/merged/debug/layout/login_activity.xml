<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".LoginActivity">

    <ImageView
        android:id="@+id/idLoginLogo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/door"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="60dp"
        />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/idButonFace"
        android:layout_marginLeft="80dp"
        android:text="Facebook"
        android:layout_below="@id/idLoginLogo"
        />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/idButonTwiter"
        android:text="Twitter"
        android:layout_below="@id/idLoginLogo"
        android:layout_toRightOf="@+id/idButonFace"
        />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/idButonFace"
        android:id="@+id/idLogin"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:id="@+id/idSenha"
        android:layout_below="@+id/idLogin"/>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/idRegistrar"
        android:layout_below="@+id/idSenha"
        android:text="Registrar"
        android:clickable="true"
        android:onClick="doClickLogin"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/idButonLogin"
        android:layout_below="@+id/idRegistrar"
        android:text="Log in"
        android:layout_centerHorizontal="true"
        android:clickable="true"
        android:onClick="doClickLogin"/>
</RelativeLayout>
